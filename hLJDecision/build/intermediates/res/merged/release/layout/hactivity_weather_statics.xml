<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/reTitle"
        layout="@layout/layout_title" />

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reTitle" />

    <RelativeLayout
        android:id="@+id/reDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reTitle"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:padding="5dip" >

            <RelativeLayout
                android:id="@+id/reContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_3" />

                <LinearLayout
                    android:id="@+id/llCircularProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName"
                    android:gravity="center_vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <com.hlj.view.CircularProgressBar
                            android:id="@+id/bar1"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:layout_centerInParent="true"
                            app:marker_visible="false"
                            app:progress_background_color="@color/light_gray"
                            app:progress_color="@color/snow"
                            app:stroke_width="3dip"
                            app:thumb_visible="false" />

                        <TextView
                            android:id="@+id/tvBar1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textColor="@color/text_color4"
                            android:textSize="@dimen/level_5" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <com.hlj.view.CircularProgressBar
                            android:id="@+id/bar2"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:layout_centerInParent="true"
                            app:marker_visible="false"
                            app:progress_background_color="@color/light_gray"
                            app:progress_color="@color/rain"
                            app:stroke_width="3dip"
                            app:thumb_visible="false" />

                        <TextView
                            android:id="@+id/tvBar2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textColor="@color/text_color4"
                            android:textSize="@dimen/level_5" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <com.hlj.view.CircularProgressBar
                            android:id="@+id/bar3"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:layout_centerInParent="true"
                            app:marker_visible="false"
                            app:progress_background_color="@color/light_gray"
                            app:progress_color="@color/fog"
                            app:stroke_width="3dip"
                            app:thumb_visible="false" />

                        <TextView
                            android:id="@+id/tvBar3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textColor="@color/text_color4"
                            android:textSize="@dimen/level_5" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <com.hlj.view.CircularProgressBar
                            android:id="@+id/bar4"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:layout_centerInParent="true"
                            app:marker_visible="false"
                            app:progress_background_color="@color/light_gray"
                            app:progress_color="@color/shachen"
                            app:stroke_width="3dip"
                            app:thumb_visible="false" />

                        <TextView
                            android:id="@+id/tvBar4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textColor="@color/text_color4"
                            android:textSize="@dimen/level_5" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <com.hlj.view.CircularProgressBar
                            android:id="@+id/bar5"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:layout_centerInParent="true"
                            app:marker_visible="false"
                            app:progress_background_color="@color/light_gray"
                            app:progress_color="@color/mai"
                            app:stroke_width="3dip"
                            app:thumb_visible="false" />

                        <TextView
                            android:id="@+id/tvBar5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textColor="@color/text_color4"
                            android:textSize="@dimen/level_5" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llCircularProgressBar"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_4" />
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.DeviceDefault.ProgressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@anim/anim_loading_black" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>