<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/reTitle"
        layout="@layout/layout_title" />

    <ImageView
        android:id="@+id/ivDate"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/shawn_icon_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="选择时间"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/level_4"
        app:layout_constraintBottom_toBottomOf="@+id/ivDate"
        app:layout_constraintStart_toEndOf="@+id/ivDate"
        app:layout_constraintTop_toTopOf="@+id/ivDate" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shawn_bg_corner_edittext2"
        android:gravity="center_vertical"
        android:hint="开始时间"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/text_color4"
        android:textSize="@dimen/level_4"
        app:layout_constraintTop_toBottomOf="@+id/ivDate" />

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shawn_bg_corner_edittext2"
        android:gravity="center_vertical"
        android:hint="结束时间"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/text_color4"
        android:textSize="@dimen/level_4"
        app:layout_constraintTop_toBottomOf="@+id/tvStartTime" />

    <ImageView
        android:id="@+id/ivArea"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/shawn_icon_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEndTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="选择区域"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/level_4"
        app:layout_constraintBottom_toBottomOf="@+id/ivArea"
        app:layout_constraintStart_toEndOf="@+id/ivArea"
        app:layout_constraintTop_toTopOf="@+id/ivArea" />

    <TextView
        android:id="@+id/tvArea"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shawn_bg_corner_edittext2"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="全国"
        android:textColor="@color/text_color4"
        android:textSize="@dimen/level_4"
        app:layout_constraintTop_toBottomOf="@+id/ivArea" />

    <TextView
        android:id="@+id/tvCheck"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shawn_bg_warning_selected"
        android:gravity="center"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="@dimen/level_3"
        app:layout_constraintTop_toBottomOf="@+id/tvArea" />

    <include
        android:id="@+id/layoutDate"
        layout="@layout/layout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>